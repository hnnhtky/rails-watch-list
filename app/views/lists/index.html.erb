<h1 class="text-center mb-4"> Movie List</h1>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 200, crop: :fill, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list), class: "stretched-link" %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Create a new list", new_list_path, class: "btn btn-primary mt-3" %>
